<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bolor.marbotcontrol.MainActivity">

    <TextView
        android:id="@+id/statusinfo"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="107dp"
        android:layout_marginTop="62dp" />

    <ImageButton
        android:id="@+id/butDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrowdown"
        android:scaleType="fitXY"
        android:onClick="onDown"
        />

    <ImageButton
        android:id="@+id/butStop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/butDown"
        android:layout_alignLeft="@+id/butDown"
        android:src="@drawable/stop"
        android:scaleType="fitXY"
        android:onClick="onStop"

        android:layout_marginBottom="5dp"/>

    <ImageButton
        android:id="@+id/butLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/butDown"
        android:layout_alignBottom="@+id/butStop"
        android:src="@drawable/arrowleft"
        android:scaleType="fitXY"
        android:onClick="onLeft"
        />

    <ImageButton
        android:id="@+id/butRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/butDown"
        android:layout_alignBottom="@+id/butStop"
        android:src="@drawable/arrowright"
        android:scaleType="fitXY"
        android:onClick="onRight"
       />

    <ImageButton
        android:id="@+id/butUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/butStop"
        android:layout_above="@+id/butStop"
        android:src="@drawable/arrowup"
        android:scaleType="fitXY"
        android:onClick="onUp"
        />

</RelativeLayout>
